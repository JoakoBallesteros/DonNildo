SUPABASE_URL=https://xxxxxxxxxxxxxxxxxxxx.supabase.co
# Clave publishable (opcional en backend)
SUPABASE_KEY=sb_publishable_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# ⚠️ Clave de service role: SOLO backend, NUNCA en el front
SUPABASE_SERVICE_ROLE=sb_secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# (Opcional) Modo de auth para logs / toggles internos
AUTH_MODE=supabase